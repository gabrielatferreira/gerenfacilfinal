<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView para exibir a lista de produtos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProdutos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fabAdicionarProduto" />

    <!-- Linha de separação entre os itens -->
    <View
        android:id="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/fabAdicionarProduto"
        android:background="#000000" />

    <!-- FloatingActionButton para adicionar produto -->
    <Button
        android:id="@+id/fabAdicionarProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Adicionar Produto"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />

</RelativeLayout>
